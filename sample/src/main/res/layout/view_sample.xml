<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/app_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:background="@color/primary"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/app_bar_back"
                android:layout_width="@dimen/app_bar_height"
                android:layout_height="@dimen/app_bar_height"
                android:scaleType="center"
                android:src="@drawable/ic_arrow_back_ios_24_white"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/AppBarTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_bar_height"
                android:layout_marginRight="@dimen/app_bar_height"
                android:gravity="center"
                tools:text="Sample name jksjksjk" />

            <ImageView
                android:id="@+id/app_bar_code"
                android:layout_width="@dimen/app_bar_height"
                android:layout_height="@dimen/app_bar_height"
                android:layout_gravity="end"
                android:scaleType="center"
                android:src="@drawable/ic_code_24"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <View style="@style/AppBarDivider" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>